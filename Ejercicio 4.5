namespace Ejemplocap4
{
    public class 
    {
        public static void Main()
        {
            int A = 0;
            int Estatura = 1;
            int Suma = 0;
            int Promedio = 0;
            
            while (Estatura > 0)
            {
                Console.WriteLine("Escriba una estatura: ");
                Estatura = Convert.ToInt32(Console.ReadLine());
                A = A + 1;
                Suma = Suma + Estatura;
            }
            Promedio = Suma / (A - 1);
            Console.WriteLine("El promedio de estaturas es : " + Promedio);
        }
    }
}
